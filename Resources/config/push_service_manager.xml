<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="openpp.push_notification.push_service_manager.class">Openpp\PushNotificationBundle\Pusher\PushServiceManager</parameter>
    </parameters>

    <services>
        <service id="openpp.push_notification.push_service_manager" class="%openpp.push_notification.push_service_manager.class%">
            <argument type="service" id="sonata.notification.backend" />
            <argument type="service" id="openpp.push_notification.manager.tag" />
            <argument />
            <argument />
        </service>

        <service id="openpp.push_notification.task.condition" class="Openpp\PushNotificationBundle\Task\ConditionTask">
            <argument type="service" id="openpp.push_notification.manager.condition" />
            <argument type="service" id="openpp.push_notification.push_service_manager" />
            <argument type="service" id="openpp.push_notification.manager.user" />
        </service>
    </services>
</container>
